<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainPageActivity">

    <LinearLayout
        android:id="@+id/main_page_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUIViewPager
            android:id="@+id/fragment_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/bottom_tool"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:background="@drawable/background2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/main_page_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/ic_selector_main_page"
                android:gravity="center"
                android:text="主页"
                android:textColor="@color/text_color_radiobutton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/cp_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_selector_cp"
                android:gravity="center"
                android:text="藏品"
                android:textColor="@color/text_color_radiobutton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/news_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_selector_news"
                android:gravity="center"
                android:text="新闻"
                android:textColor="@color/text_color_radiobutton"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/yy_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_selector_yy"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/text_color_radiobutton"
                android:textSize="14sp" />
        </RadioGroup>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>